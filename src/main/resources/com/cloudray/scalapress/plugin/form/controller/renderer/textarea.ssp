<%@ val id: String %>
<%@ val name: String %>
<%@ val text: String %>
<%@ val star: String %>

<div class="form-group">
    <label class="col-lg-2 control-label">
      ${name} ${star}
    </label>

    <div class="controls" style="height: auto">
        <textarea name="${id}">
          ${text}
        </textarea>
    </div>
</div>