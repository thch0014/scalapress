<%@ val id: String %>

<div id="calendar_widget_${id}"></div>
<script>
    $("#calendar_widget_${id}").eventCalendar({
        startWeekOnMonday: true,
        moveSpeed: 200,
        showDescription: true,
        eventsScrollable: false,
        eventsjson: "/plugin/calendar/event/widget/${id}"
    });
</script>