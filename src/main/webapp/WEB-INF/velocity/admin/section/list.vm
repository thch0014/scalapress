#parse("/admin/header.vm")


<h3>Widgets</h3>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Default</th>
        <th></th>
    </tr>
    #foreach ($theme in $themes)
        <tr>
            <td>$theme.id</td>
            <td>$theme.name</td>
            <td>$theme.default</td>
            <td><a href="$urlResolver.themeEdit($theme)" role="button" class="btn btn-xs btn-default"> <i class="glyphicon  glyphicon-pencil"></i>
            </a></td>
        </tr>
    #end
</table>

<a href="$urlResolver.createTheme()" role="button" class="btn btn-xs btn-default"> <i class="glyphicon  glyphicon-plus"></i> Create</a>

#parse("/admin/footer.vm")