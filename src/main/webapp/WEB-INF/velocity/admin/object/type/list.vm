#parse("/admin/header.vm")


<h3>Object Types</h3>


<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    #foreach ($t in $types)
        <tr>
            <td>$t.id</td>
            <td>$t.name</td>
            <td>
                <a href="$urlResolver.typeEdit($t)" role="button" class="btn btn-mini"> <i class="icon-pencil"></i></a>
                <a href="/backoffice/type/$t.id/delete" role="button" class="btn btn-danger btn-mini"> <i class="icon-trash"></i></a>
            </td>
        </tr>
    #end
</table>


<a href="/backoffice/type/create" role="button" class="btn btn-inverse"> <i class="icon-white icon-plus"></i> Create New Item Type</a>


#parse("/admin/footer.vm")