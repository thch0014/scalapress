#parse("/admin/header.vm")

<h3>Transaction ${tx.transactionId}</h3>

<div class="control-group">
    <label class="control-label">Transaction Id</label>

    <div class="controls">
      #springFormInput("tx.transactionId", "class='input-xxlarge'")
    </div>
</div>

<div class="control-group">
    <label class="control-label">Date</label>

    <div class="controls">
      $datetool.format($tx.date)
    </div>
</div>

<div class="control-group">
    <label class="control-label">Processor</label>

    <div class="controls">
      #springFormInput("tx.paymentProcessor", "")
    </div>
</div>

<div class="control-group">
    <label class="control-label">Auth Code</label>

    <div class="controls">
      #springFormInput("tx.authCode", "")
    </div>
</div>

<div class="control-group">
    <label class="control-label">Amount</label>

    <div class="controls">
      $number.currency($tx.amountDecimal())
    </div>
</div>

#parse("/admin/footer.vm")