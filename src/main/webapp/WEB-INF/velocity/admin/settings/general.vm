#parse("/admin/header.vm")

<h3>Installation</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Offline</label>

        <div class="controls">
          #springFormCheckbox("settings.offline")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Offline Message</label>

        <div class="controls">
          #springFormInput("settings.offlineMessage")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Max image width</label>

        <div class="controls">
          #springFormInput("settings.maxImageWidth")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Max image height</label>

        <div class="controls">
          #springFormInput("settings.maxImageHeight")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>

#parse("/admin/footer.vm")