#parse("/admin/header.vm")

<h3>Installation</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Server Info</label>

        <div class="controls">
            $serverInfo
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Local Name</label>

        <div class="controls">
            $request.getLocalName
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Cdn</label>

        <div class="controls">
            $assetStore.cdn
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Domain</label>

        <div class="controls">
            #springFormInput("installation.domain")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Admin Email</label>

        <div class="controls">
            #springFormInput("installation.adminEmail")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Name</label>

        <div class="controls">
            #springFormInput("installation.name")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Address</label>

        <div class="controls">
            #springFormInput("installation.address")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Postcode</label>

        <div class="controls">
            #springFormInput("installation.postcode")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Country</label>

        <div class="controls">
            #springFormInput("installation.country")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Email</label>

        <div class="controls">
            #springFormInput("installation.email")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Telephone</label>

        <div class="controls">
            #springFormInput("installation.telephone")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Vat Number</label>

        <div class="controls">
            #springFormInput("installation.vatNumber")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Company Number</label>

        <div class="controls">
            #springFormInput("installation.companyNumber")
        </div>
    </div>


    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>

#parse("/admin/footer.vm")
