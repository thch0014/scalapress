#parse("/admin/header.vm")


<h3>Edit Section</h3>

<form class="form-horizontal" method="POST">

    <div class="form-group">
        <label class="col-lg-2 control-label">Name</label>

        <div class="col-lg-8">
            #springFormInput("section.name", "class='input-xlarge'")
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Visible</label>

        <div class="col-lg-8">
            #springFormCheckbox("section.visible")
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Sort</label>

        <div class="col-lg-8">
            <select id="sort" name="sort">
                #foreach($option in $sortMap.keySet())
                    <option value="${option}"
                        #if("$!section.sort" == "$option")
                            selected="selected"
                        #end>
                        ${sortMap.get($option)}</option>
                #end
            </select>
        </div>
    </div>

    #if ($section.sort == "Attribute" || $section.sort == "AttributeDesc")
        <div class="form-group">
            <label class="col-lg-2 control-label">Sort Attribute</label>

            <div class="col-lg-8">
                <select id="sortAttribute" name="sortAttribute">
                    #foreach($option in $attributesMap.keySet())
                        <option value="${option}"
                            #if("$!section.sortAttribute.id" == "$option") selected="selected" #end>
                            ${attributesMap.get($option)}
                        </option>
                    #end
                </select>
            </div>
        </div>
    #end

    <div class="form-group">
        <label class="col-lg-2 control-label">Markup</label>

        <div class="col-lg-8">
            <select id="markup" name="markup">
                #foreach($option in $markupMap.keySet())
                    <option value="${option}"
                        #if("$!section.markup.id" == "$option")
                            selected="selected"
                        #end>
                        ${markupMap.get($option)}</option>
                #end
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Page Size</label>

        <div class="col-lg-8">
            #springFormInput("section.pageSize", "class='input-sm'")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="/backoffice/folder/$section.folder.id" class="btn btn-default">Return</a>
    </div>

</form>

#parse("/admin/footer.vm")