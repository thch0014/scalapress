#parse("/admin/header.vm")


<h3>Edit Section</h3>

<form class="form-horizontal" method="POST">

    <div class="form-group">
        <label class="col-lg-2 control-label">Name</label>

        <div class="col-lg-8">
          #springFormInput("section.name", "class='input-xlarge'")
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Visible</label>

        <div class="col-lg-8">
          #springFormCheckbox("section.visible")
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Content</label>

        <div class="col-lg-8">
          #springFormTextarea("section.content", "rows='16' class='input-block-level tinymce'")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="/backoffice/folder/$section.folder.id" class="btn btn-default" class="btn btn-default">Return</a>
    </div>

</form>

#parse("/admin/footer.vm")