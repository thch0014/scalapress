#parse("/admin/header.vm")

<h3>Folder Settings</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Default page size</label>

        <div class="controls">
            #springFormInput("settings.pageSize", "class='input-small'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Header</label>

        <div class="controls">
            #springFormTextarea("settings.header", "rows='8' class='input-block-level htmleditor'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Footer</label>

        <div class="controls">
            #springFormTextarea("settings.footer", "rows='8' class='input-block-level htmleditor'")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>

</form>

#parse("/admin/footer.vm")