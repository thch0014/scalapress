#parse("/admin/header.vm")


<h3>Edit Listing Package</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Name</label>

        <div class="controls">
            #springFormInput("package.name", "class='input-xxlarge'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Deleted</label>

        <div class="controls">
            #springFormCheckbox("package.deleted")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Description</label>

        <div class="controls">
            #springFormTextarea("package.description", "class='input-xlarge'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Object Type</label>

        <div class="controls">
            <select id="objectType" name="objectType">
                #foreach($option in $objectTypesMap.keySet())
                    <option value="${option}"
                        #if("$!package.objectType.id" == "$option")
                            selected="selected"
                        #end>
                        ${objectTypesMap.get($option)}</option>
                #end
            </select>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Fee</label>

        <div class="controls">
            #springFormInput("package.fee", "class='input-small'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Duration in days</label>

        <div class="controls">
            #springFormInput("package.duration", "class='input-small'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Max images</label>

        <div class="controls">
            #springFormInput("package.maxImages", "class='input-small'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Max folders</label>

        <div class="controls">
            #springFormInput("package.maxFolders", "class='input-small'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Folders</label>

        <div class="controls">
            #springFormInput("package.folders", "class='input-xlarge'")
        </div>
    </div>

