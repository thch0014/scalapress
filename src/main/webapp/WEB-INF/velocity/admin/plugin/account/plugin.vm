#parse("/admin/header.vm")

<h3>Account Plugin Settings</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Account Page Header</label>

        <div class="controls">
            #springFormTextarea("plugin.accountPageHeader")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Account Page Footer</label>

        <div class="controls">
            #springFormTextarea("plugin.accountPageFooter")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>

#parse("/admin/footer.vm")