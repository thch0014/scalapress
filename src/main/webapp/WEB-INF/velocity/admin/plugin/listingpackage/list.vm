#parse("/admin/header.vm")


<h3>Listing Packages</h3>


<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    #foreach ($p in $packages)
        <tr>
            <td>$p.id</td>
            <td>$p.name</td>
            <td><a href="/backoffice/plugin/listingpackage/$p.id" role="button" class="btn btn-mini">
                <i class="icon-pencil"></i> </a>
            </td>
        </tr>
    #end
</table>

<a href="/backoffice/plugin/listingpackage/create" role="button" class="btn btn-mini"> <i class="icon-plus"></i> Create
    Package</a>


#parse("/admin/footer.vm")