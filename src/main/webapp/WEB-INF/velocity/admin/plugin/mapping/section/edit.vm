#parse("/admin/header.vm")


<h3>Edit Section</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Name</label>

        <div class="controls">
            #springFormInput("section.name", "class='input-xlarge'")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Visible</label>

        <div class="controls">
            #springFormCheckbox("section.visible")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Postcode</label>

        <div class="controls">
            #springFormInput("section.postcode", "class='input-small'")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>

        #if ($section.folder)
            <a href="/backoffice/folder/$section.folder.id" class="btn">Return</a>
        #end
        #if ($section.obj)
            <a href="/backoffice/obj/$section.obj.id" class="btn">Return</a>
        #end
    </div>

</form>

#parse("/admin/footer.vm")