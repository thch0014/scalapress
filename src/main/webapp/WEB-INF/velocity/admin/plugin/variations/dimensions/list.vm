#parse("/admin/header.vm")

<h3>Dimensions</h3>

<a href="/backoffice/plugin/variations/dimensions/create?objectTypeId=$objectTypeId" role="button" class="btn">
    <i class="icon-plus"></i> Create Dimension</a>

<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Object Type</th>
        <th>Name</th>
        <th></th>
    </tr>
  #foreach ($d in $dimensions)
      <tr>
          <td>$d.id</td>
          <td>$d.objectType.name</td>
          <td>$d.name</td>
          <td><a href="/backoffice/plugin/variations/dimensions/$d.id" role="button" class="btn btn-xs">
              <i class="icon-pencil"></i>
          </a></td>
      </tr>
  #end
</table>


#parse("/admin/footer.vm")