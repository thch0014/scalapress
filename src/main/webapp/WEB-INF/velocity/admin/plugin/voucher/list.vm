#parse("/admin/header.vm")

<div class="page-header">
    <h2>Vouchers</h2>
</div>

<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
  #foreach ($v in $vouchers)
      <tr>
          <td>$v.id</td>
          <td>$v.name</td>
          <td>
              <a href="/backoffice/voucher/$v.id" role="button" class="btn btn-xs btn-default">
                  <i class="glyphicon glyphicon-pencil"></i>
              </a>
          </td>
      </tr>
  #end
</table>


<div class="panel panel-default">
    <div class="panel-body">
        <a href="/backoffice/voucher/create" role="button" class="btn btn-primary">
            <i class="glyphicon glyphicon-plus"></i> Add new voucher</a>
    </div>
</div>

#parse("/admin/footer.vm")