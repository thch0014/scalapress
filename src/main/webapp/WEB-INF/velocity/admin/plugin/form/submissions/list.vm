#parse("/admin/header.vm")

<div class="page-header">
    <h2>Submissions</h2>
</div>

#paging($paging)

<table class="table table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Form Name</th>
        <th>Date Submitted</th>
        <th>Referer</th>
        <th></th>
    </tr>
  #foreach ($s in $submissions)
      <tr>
          <td><a href="/backoffice/submission/$s.id">$s.id</a></td>
          <td>$s.formName</td>
          <td>$datetool.format($s.date)</td>
          <td>#if ($s.folder)
              <a href="/folder/$s.folder.id">$s.folder.name</a>
          #end</td>
          <td>
              <a href="/backoffice/submission/$s.id" role="button" class="btn btn-xs btn-default">
                  <i class="glyphicon glyphicon-eye-open"></i>
              </a>

              <a onClick="bootbox.confirm('Confirm delete', function(result) {
                      if (result) {
                      window.location='/backoffice/submission/$s.id/delete';
                      }})" role="button" class="btn btn-danger btn-xs">
                  <i class="glyphicon glyphicon-trash"></i></a>
          </td>
      </tr>
  #end
</table>

#paging($paging)



#parse("/admin/footer.vm")