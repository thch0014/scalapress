#parse("/admin/header.vm")


<h3>Submissions</h3>

#paging($paging)

<table class="table table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Form Name</th>
        <th>Date Submitted</th>
        <th>Referer</th>
        <th></th>
    </tr>
    #foreach ($s in $submissions)
        <tr>
            <td>$s.id</td>
            <td>$s.formName</td>
            <td>$datetool.format($s.date)</td>
            <td>#if ($s.folder)
                <a href="/folder/$s.folder.id">$s.folder.name</a>
            #end</td>
            <td>
                <a href="$urlResolver.viewSubmission($s)" role="button" class="btn btn-xs btn-default">
                    <i class="glyphicon  glyphicon-eye-open"></i></a>


                <a onClick="bootbox.confirm('Confirm delete', function(result) {
                        if (result) {
                            window.location='/backoffice/submission/$s.id/delete';
                        }})" role="button" class="btn btn-danger btn-xs">
                    <i class="glyphicon  glyphicon-trash glyphicon  glyphicon-white"></i></a>
            </td>
        </tr>
    #end
</table>

#paging($paging)



#parse("/admin/footer.vm")