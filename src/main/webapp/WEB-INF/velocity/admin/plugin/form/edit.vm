#parse("/admin/header.vm")


<h3>Edit Form</h3>

<form class="form-horizontal" method="POST">


    <div class="tabbable">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">Fields</a></li>
            <li><a href="#tab2" data-toggle="tab">Submission Text</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">

                <div class="form-group">
                    <label class="col-lg-2 control-label">Name</label>

                    <div class="col-lg-8">
                      #springFormInput("form.name")
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Email Notification Recipients</label>

                    <div class="col-lg-8">
                      #springFormTextarea("form.recipients")
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-lg-2 control-label">Submit Button Text</label>

                    <div class="col-lg-8">
                      #springFormInput("form.submitButtonText")
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Submission Email Subject</label>

                    <div class="col-lg-8">
                      #springFormInput("form.submissionEmailSubject")
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Submission Email Body</label>

                    <div class="col-lg-8">
                      #springFormTextarea("form.submissionEmailBody")
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Submission Redirect</label>

                    <div class="col-lg-8">
                      #springFormInput("form.submissionRedirect")
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Use Captcha</label>

                    <div class="col-lg-8">
                      #springFormCheckbox("form.captcha")
                    </div>
                </div>

            </div>
            <div class="tab-pane" id="tab2">

                <div class="form-group">
                    <label class="col-lg-2 control-label">Submission Page Text</label>

                    <div class="col-lg-8">
                      #springFormTextarea("form.submissionText", "rows='12' class='input-block-level tinymce'")
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="/backoffice/form" class="btn btn-default">Return</a>
    </div>


</form>


<table class="table table-condensed table-hover" id="fields-table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Type</th>
        <th>Required</th>
        <th></th>
    </tr>
  #foreach ($field in $fields)
      <tr data-field-id="$field.id" class="field-row">
          <td>$field.id</td>
          <td>$field.name</td>
          <td>$field.fieldType</td>
          <td>#if ($field.required) <span class="label label-important">Required</span>#end</td>
          <td>
              <a href="/backoffice/form/$form.id/field/$field.id" role="button" class="btn btn-xs btn-default">
                  <i class="glyphicon  glyphicon-pencil"></i></a>


              <a onClick="bootbox.confirm('Confirm delete', function(result) {
                      if (result) {
                      window.location='/backoffice/form/$form.id/field/$field.id/delete';
                      }})" role="button" class="btn btn-danger btn-xs">
                  <i class="glyphicon  glyphicon-trash glyphicon  glyphicon-white"></i></a>
          </td>
      </tr>
  #end
</table>


<a href="/backoffice/form/$form.id/field/create" role="button" class="btn btn-default"> <i class="glyphicon  glyphicon-plus"></i> Create Form Field</a>


<script>
    $(function () {
        $("#fields-table tbody").sortable({

            update: function (event, ui) {
                var order = []
                $("#fields-table tr.field-row").each(function (v) {
                    var id = $(this).attr("data-field-id")
                    order.push(id)
                })

                $.ajax({
                    type: "POST",
                    url: "/backoffice/form/$form.id/field/order",
                    contentType: "text/plain",
                    data: order.join('-')
                });
            }
        });
        $("#fields-table tbody").disableSelection();
    });
</script>

#parse("/admin/footer.vm")