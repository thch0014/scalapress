#parse("/admin/header.vm")


<h3>Forms</h3>


<a href="/backoffice/form/create" role="button" class="btn btn-primary"> <i class="icon-plus"></i> Create Form</a>


<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
  #foreach ($f in $forms)
      <tr>
          <td>$f.id</td>
          <td>$f.name</td>
          <td><a href="$urlResolver.editForm($f)" role="button" class="btn btn-xs"> <i class="icon-pencil"></i>
          </a></td>
      </tr>
  #end
</table>


#parse("/admin/footer.vm")