#parse("/admin/header.vm")

<h3>SagepayForm Plugin Settings</h3>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Vendor Email</label>

        <div class="controls">
          #springFormInput("plugin.sagePayVendorEmail", "")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Vendor Name</label>

        <div class="controls">
          #springFormInput("plugin.sagePayVendorName", "")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Encryption Password</label>

        <div class="controls">
          #springFormInput("plugin.sagePayEncryptionPassword", "")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>

#parse("/admin/footer.vm")