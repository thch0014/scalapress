#parse("/admin/header.vm")


<h3>Search Forms</h3>


<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fields</th>
        <th></th>
    </tr>
    #foreach ($f in $forms)
        <tr>
            <td>$f.id</td>
            <td>$!f.name</td>
            <td>$f.fields.size()</td>
            <td>
                <a href="$urlResolver.editSearchForm($f)" role="button" class="btn btn-xs btn-default">
                    <i class="glyphicon  glyphicon-pencil"></i> </a></td>
        </tr>
    #end
</table>

<a href="$urlResolver.createSearchForm()" role="button" class="btn btn-xs btn-default"> <i class="glyphicon  glyphicon-plus"></i> Create Form</a>


#parse("/admin/footer.vm")