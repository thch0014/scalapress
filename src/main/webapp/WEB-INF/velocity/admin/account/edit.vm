#parse("/admin/header.vm")


<h3>Edit $form.account.AccountType.name: $form.account.name</h3>
<h5>ID: $form.account.id &nbsp; Created: $datetool.format($form.account.dateCreated)</h5>

<form class="form-horizontal" method="POST" enctype="multipart/form-data">

    <div class="tab-pane active" id="tab1">

        <div class=" control-group">
            <label class="control-label">Name</label>

            <div class="controls">
              #springFormInput("form.account.name", "class='input-xxlarge'")
            </div>
        </div>

        <div class=" control-group">
            <label class="control-label">Email</label>

            <div class="controls">
              #springFormInput("form.account.email", "class='input-xxlarge'")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Status</label>

            <div class="controls">
              #springFormSingleSelect("form.account.status", $accountStatusMap, "")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Change Password</label>

            <div class="controls">
              #springFormInput("form.changePassword")
            </div>
        </div>

    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Save changes</button>
        &nbsp;
        <a href="/backoffice/account?accountTypeId=${form.account.accountType.id}" class="btn btn-info">
            <i class="glyphicon glyphicon-arrow-left"></i> Return to list</a>
    </div>

</form>

#if ($orders.size() > 0)
<h4>Orders</h4>
<table class="table table-condensed table-hover">
    <tr>
        <th>Id</th>
        <th>Date Placed</th>
        <th>Status</th>
        <th>Total</th>
        <th></th>
    </tr>
  #foreach ($order in $orders)
      <tr>
          <td><a href="/backoffice/order/$order.id">$order.id</a></td>
          <td>$!datetool.format($order.datePlaced)</td>
          <td>$order.status()</td>
          <td>$order.total()</td>
          <td>
              <a href="/backoffice/order/$order.id" role="button" class="btn btn-xs">
                  <i class="glyphicon glyphicon-pencil"></i></a>
          </td>
      </tr>
  #end
</table>
#end

#parse("/admin/footer.vm")