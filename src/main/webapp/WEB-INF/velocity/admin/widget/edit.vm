#parse("/admin/header.vm")


<h1>Edit Widget</h1>

<form class="form-horizontal" method="POST">

    <div class="control-group">
        <label class="control-label">Name</label>

        <div class="controls">
            #springFormInput("widget.name")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Visible</label>

        <div class="controls">
            #springFormCheckbox("widget.visible")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Location</label>

        <div class="controls">
            #springFormInput("widget.location")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Container Class</label>

        <div class="controls">
            #springFormInput("widget.containerClass")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Container Id</label>

        <div class="controls">
            #springFormInput("widget.containerId")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Caption</label>

        <div class="controls">
            #springFormInput("widget.caption")
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Content</label>

        <div class="controls">
            #springFormTextarea("widget.content", "rows='16' class='input-block-level htmleditor'")
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>

#parse("/admin/footer.vm")