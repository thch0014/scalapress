#parse("/admin/header.vm")


<h3>Saved Searches</h3>


<table class="table table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    #foreach ($s in $searches)
        <tr>
            <td>$s.id</td>
            <td>$!s.name</td>
            <td>
                <a href="/backoffice/savedsearch/$s.id" class="btn btn-mini">
                    <i class="icon-pencil"></i> </a>
                <a href="/search/saved/$s.id" class="btn btn-mini">
                    <i class="icon-eye-open"></i> </a></td>
        </tr>
    #end
</table>

<a href="$urlResolver.createSearchForm()" role="button" class="btn btn-mini"> <i class="icon-plus"></i> Create Form</a>


#parse("/admin/footer.vm")