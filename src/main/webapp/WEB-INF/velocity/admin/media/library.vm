#parse("/admin/header.vm")


<h3>Media Library</h3>

<form class='form-horizontal' method='GET'>
    <input type="text" class=" input-xlarge" placeholder="Search for media" name="q"/>
    <button type="submit" class="btn btn-primary"><i class="icon-search"></i> Search</button>
    <a href="#upload-modal" role='button' class="btn btn-inverse" data-toggle="modal"> <i class="icon-upload"></i> Upload Media</a>
</form>

<style>

    div.assetinfo {
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
        font-size: 8pt;
    }

    .row-fluid .thumbnails /**/li {
        min-height: 140px;
    }

    .row-fluid .thumbnails [class*="span"] {
        margin-left: 0;
        margin-right: 1.5%;
    }

</style>

$pagination

<div class="row-fluid">
    <ul class="thumbnails">
        #foreach ($a in $assets)
            <li class="span2">
                <div class="thumbnail">
                    <img data-src="holder.js/300x200" src="/images/$a.filename()?width=128&height=128">

                    <div class="assetinfo">$a.filename()</div>
                    <div class="assetinfo">$a.size() bytes &nbsp; $a.contentType()</div>

                    <a class="btn btn-mini" href="/images/$a.filename()">
                        <i class="icon-eye-open icon-white"></i> View Original</a>
                </div>
            </li>
        #end
    </ul>
</div>

