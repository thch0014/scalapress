<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>sat Nav</title>
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.0-beta.1/jquery.mobile-1.3.0-beta.1.min.css"/>
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.0-beta.1/jquery.mobile-1.3.0-beta.1.min.js"></script>
</head>

<body>

<div data-role="page">

    <div data-role="header">
        <a href="index.html" data-icon="back" data-rel="back">Back</a>

        <h1>$folder.name</h1>
        <a href="#catpanel" data-icon="grid">Menu</a>
    </div>

    <div data-role="content">
        <p>$!folder.header</p>
        <ul data-role="listview">
            #foreach ($obj in $objects)
                <li><a href="/mobile/o/$obj.id">
                    #if ($obj.images.size() > 0)
                        <img src="/images/$obj.images.get(0).filename"/>
                    #end
                    <h3>$obj.name</h3>

                    <p>&pound;$obj.sellPriceDecimal()</p>
                </a></li>
            #end
        </ul>
    </div>

    <div data-role="footer">
        <h4>Sat Nav Easy</h4>
    </div>

    #parse("/mobile/catpanel.vm")
</div>
</body>
</html>